# LHAtoLCSC Configuration File
# Copy this file to .env and fill in your values

# =============================================================================
# LCSC API Credentials
# =============================================================================
# Get these from: https://www.lcsc.com/agent
# Apply for API access and wait for approval

LCSC_API_KEY=your_api_key_here
LCSC_API_SECRET=your_api_secret_here
LCSC_API_URL=https://api.lcsc.com/v1
LCSC_API_BASE_URL=https://www.lcsc.com
LCSC_API_TIMEOUT=30
LCSC_API_MAX_RETRIES=3

# =============================================================================
# Network Settings
# =============================================================================
# Your public IP address (for whitelisting reference)
# Get it from: https://api.ipify.org or use the "Detect My IP" button in settings

USER_IP=
REQUEST_TIMEOUT=30

# =============================================================================
# Application Settings
# =============================================================================
# Default currency for pricing (USD, EUR, CNY, etc.)
DEFAULT_CURRENCY=USD

# Number of results per page
DEFAULT_PAGE_SIZE=100

# Fuzzy matching threshold (0-100)
FUZZY_MATCH_THRESHOLD=75

# Default match threshold (0.0-1.0)
DEFAULT_MATCH_THRESHOLD=0.70

# Enable caching for API responses
ENABLE_CACHE=true

# Cache time-to-live in days
CACHE_TTL_DAYS=7

# Logging
LOG_LEVEL=INFO
LOG_FILE=lhatolcsc.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# GUI Settings
WINDOW_WIDTH=1280
WINDOW_HEIGHT=800
THEME=default

# Performance
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY_MS=200
BATCH_SIZE=50

# Development
DEBUG=false
ENABLE_PROFILING=false
